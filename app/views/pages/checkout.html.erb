<h1> this is the checkout! </h1>

<%= render "carts/cart" %>

<%= simple_form_for([@cart, @order]) do |f| %>
  <%= f.input :name %>
  <%= f.input :email %>
  <%= f.number_field :phone_number %>
  <%= f.input :address %>
  <%= f.number_field :zipcode %>
  <%= f.input :city %>
  <%= f.input :country %>
  <%= f.number_field :emoney_number %>
  <%= f.number_field :emoney_pin %>
  <%= f.submit "Confirm", class: "btn-success text-light p-2 shadow-none" %>
<% end %>
